{
	"name": "Evalio",
	"image": "ghcr.io/contagon/evalio_manylinux_2_34_x86_64",
	"containerEnv": {
		"EVALIO_DATA": "/data",
		"CMAKE_GENERATOR": "Ninja",
		// Set the link mode as uv doesn't symlink well in docker
		"UV_LINK_MODE": "copy"
	},
	"containerUser": "evalio",
	"mounts": [
		// If you have set EVALIO_DATA elsewhere, you can change the source path here
		"source=${localWorkspaceFolder}/data,target=/data,type=bind,consistency=cached"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				// C++
				"llvm-vs-code-extensions.vscode-clangd",
				"xaver.clang-format",
				"ms-vscode.cmake-tools",
				// Python
				"charliemarsh.ruff",
				"ms-pyright.pyright",
				"ms-python.python",
				// Misc
				"tamasfe.even-better-toml"
			]
		}
	},
	// Make sure the data directory exists
	"initializeCommand": "mkdir -p data"
}